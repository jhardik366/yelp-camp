<!DOCTYPE HTML>
<html>
    <head>
        <!-- Make site responsive on mobile/tablet -->
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>YelpCamp</title>
        <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&display=swap" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="/stylesheets/main.css">
    </head>
    <body>
        <div class="ui massive borderless menu">
            <div class="container">
                <a class="item" href="/" style="font-weight: 700">YELP CAMP</a>
                <a class="item" href="/campgrounds">Home</a>
                <div class="right menu">
                    <% if(!currentUser){ %>
                        <div class="item">
                            <a class="ui button" href="/login">Login</a>
                        </div>
                        <div class="item">
                            <a class="ui primary button" href="/register">Sign Up</a>
                        </div>
                    <% } else { %>
                            <a class="item" href="/users/<%= currentUser._id %>">Hello, <%= currentUser.username %></a>
                            <div class="item">
                                <a class="ui primary button" href="/logout">Sign Out</a>
                            </div>
                    <% } %>
                </div>
            </div>
        </div>
        
        <% if(error && error.length > 0){ %>
        <div class="container">
            <div class="row">
                <div class="alert alert-danger" role="alert"><%= error %></div>    
            </div>
        </div>
        <% } %>
        
        <% if(success && success.length > 0){ %>
        <div class="container">
            <div class="row">
                <div class="alert alert-success" role="alert"><%= success %></div>    
            </div>
        </div>
        <% } %>
        
