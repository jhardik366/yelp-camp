<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">ADD COMMENT TO <%= campground.name %></h1>
        <div style="width: 70%; margin: 25px auto;">
            <form class="ui huge form" action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="required field">
                    <label>COMMENT</label>
                    <textarea name="comment[text]" placeholder="Add your comment..."></textarea>
                </div>
                <button class="fluid ui massive primary button">SUBMIT</button>
            </form>    
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

