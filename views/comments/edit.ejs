    <div class="row">
        <h1 style="text-align: center">EDIT YOUR COMMENT</h1>
        <div style="width: 70%; margin: 25px auto;">
            <form class="ui huge form" action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="required field">
                    <label>COMMENT</label>
                    <textarea name="comment[text]"><%= comment.text %></textarea>
                </div>
                <button class="fluid ui massive primary button">UPDATE</button>
            </form>    
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

