<% include ../partials/header %>

<div class="row">
	<div class="col-md-3">
			
		<div class="thumbnail">
			<img src="<%= user.avatar %>" alt="user profile image" width="304" height="236">
			<div class="caption"><a href="mailto:<%= user.email %>"><%= user.email %></a></div>
		</div>
		<a class="btn btn-md btn-warning" href="/users/<%= currentUser._id %>/edit">Edit Your Profile</a>
	</div>
	<div class="col-md-9">
		<h1><%= user.firstName + " " + user.lastName %></h1>
		<p id="owner_desc">
			<%= user.owner_description %>
		</p>
		<h3><%= user.username %>'s campgrounds:</h3>
		<ul>
			<% campgrounds.forEach(function(campground) { %>
			<li><a href="/campgrounds/<%= campground.id %>"><%= campground.name %></a></li>
			<% }); %>
		</ul>
	</div>
</div>

<% include ../partials/footer %>